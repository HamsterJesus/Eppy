<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eppynavigation"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/home2"
        android:name="com.example.eppy.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_alarm"
            app:destination="@id/alarm" />
        <action
            android:id="@+id/action_home2_to_settings"
            app:destination="@id/settings" />
    </fragment>
    <fragment
        android:id="@+id/alarm"
        android:name="com.example.eppy.Alarm"
        android:label="fragment_alarm"
        tools:layout="@layout/fragment_alarm" >
        <action
            android:id="@+id/action_alarm_to_home2"
            app:destination="@id/home2" />
        <action
            android:id="@+id/action_alarm_to_addAlarmForm"
            app:destination="@id/addAlarmForm" />
    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.example.eppy.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settings_to_home2"
            app:destination="@id/home2" />
    </fragment>
    <fragment
        android:id="@+id/addAlarmForm"
        android:name="com.example.eppy.AddAlarmForm"
        android:label="fragment_add_alarm_form"
        tools:layout="@layout/fragment_add_alarm_form" />
</navigation>