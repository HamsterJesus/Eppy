<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/alarmNametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Test Alarm"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmSetFortxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Time"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/SetAlarmbtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/SetAlarmbtn"
        android:layout_width="50dp"
        android:layout_height="39dp"
        android:layout_margin="5dp"
        android:layout_marginStart="8dp"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/EditAlarmbtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp,UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/EditAlarmbtn"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:layout_margin="5dp"
        android:text="Edit"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@id/DeleteAlarmbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/DeleteAlarmbtn"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:layout_margin="5dp"
        android:layout_marginStart="56dp"
        android:text="Delete"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>